{
  "name": "dead-server",
  "version": "1.0.9",
  "description": "simple development http server with live reload capability",
  "keywords": [
    "front-end",
    "development",
    "tool",
    "server",
    "http",
    "cli"
  ],
  "author": "Rimantas Belovas",
  "dependencies": {
    "chalk": "^4.1.2",
    "chokidar": "^3.5.x",
    "connect": "^3.7.x",
    "cors": "^2.8.5",
    "event-stream": "3.3.4",
    "faye-websocket": "0.11.x",
    "http-auth": "4.2.x",
    "http-auth-connect": "^1.0.x",
    "morgan": "^1.10.0",
    "object-assign": "^4.1.1",
    "open": "^6.4.0",
    "proxy-middleware": "0.15.0",
    "send": "0.17.2",
    "serve-index": "^1.9.1"
  },
  "devDependencies": {
    "eslint": "^8.25.0",
    "jshint": "^2.13.5",
    "mocha": "^9.2.2",
    "supertest": "^3.4.2"
  },
  "scripts": {
    "lint": "eslint dead-server.js index.js",
    "hint": "jshint dead-server.js index.js",
    "test": "mocha test --exit && npm run lint"
  },
  "bin": {
    "dead-server": "./dead-server.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/belauzas/dead-server.git"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "preferGlobal": true,
  "license": "MIT",
  "eslintConfig": {
    "env": {
      "node": true
    },
    "rules": {
      "quotes": 0,
      "curly": 0,
      "strict": 0,
      "no-process-exit": 0,
      "eqeqeq": 1,
      "no-unused-vars": 1,
      "no-shadow": 1
    }
  }
}
